{
  "name": "iot-dashboard",
  "version": "1.0.0",
  "description": "Interactive IoT Dashboard for PlatformIO devices",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cross-env PORT=5002 node --max-old-space-size=4096 server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install-all": "npm install && cd client && npm install",
    "vital-trace": "concurrently \"npm run server\" \"npm run client\" \"npm run simulator\"",
    "simulator": "node vital-trace-simulator.js",
    "demo": "npm run vital-trace"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "moment": "^2.29.4",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.6",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "nodemon": "^3.0.1"
  },
  "author": "IoT Dashboard",
  "license": "MIT"
}
